<h1>List of Clothes</h1>
  <% @garments.each do |garment| %>
<h2><%= link_to garment.title, garment_path(garment) %> </h2>
<h2><%= garment.user.email  %></h2>

<% if policy(garment).edit? %>
<%= link_to "Delete Garment", garment_path(garment), method: :delete %>
<% end %>

<% if policy(garment).destroy? %>
<%= link_to "Edit Garment", edit_garment_path(garment) %>
<% end %>

<% end %>
