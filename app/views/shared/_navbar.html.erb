<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "#", class: "navbar-brand" do %>
<%= image_tag "airbaby.png" %>
  <% end %>


<div class= "searchbox d-flex justify-content-between align-items-center">
  <div class="searchbar">
  <%= form_tag garments_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a item of clothing"%>
  </div>
    <div class="button">

    <%= submit_tag "Search", class: "btn btn-flat mr-2" %>
    </div>
  <% end %>
</div>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
       <li class="nav-item d-flex align-items-center">
          <%= link_to "Upload your baby clothes", new_garment_path, class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to "Home", garments_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown" >
         <% if current_user.avatar.attached? %>
            <%= cl_image_tag current_user.avatar.key, height: 30, width: 30, crop: :fill, class: "avatar dropdown-toggle rounded", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% else %>
            <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="navbar_avatar" src="data:image/png;base64, "/>
        <% end %>


          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Action", "#", class: "dropdown-item" %>
            <%= link_to "My bookings", bookings_path, class: "dropdown-item" %>
            <%= link_to "Profile", profile_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
           <!--  -->
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
